program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var   fin : text;
      val,i,sum : integer;
begin

  Assign(fin, 'input.txt');

   for i:=1  to 5 do
    begin
    append(fin); //дозвіл на додавання в кінець файлу
      readln(val); //ввід числа користувачем

      writeln(fin,val); //записуємо це число в файл
    end;

   Reset(fin) ; //дозвіл на зчитування з файлу
   while(not(Eof(fin))) do //поки не нікень файлу
   begin
      readln(fin, val);
      sum := sum + val;
   end;
  writeln('Sum = ',sum);
  readln;
 close(fin);   //закриваємо файл

end.
